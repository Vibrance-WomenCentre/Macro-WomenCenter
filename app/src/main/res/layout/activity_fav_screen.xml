<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".favScreen">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/qwitcherbold"
        android:text="Favorite"
        android:textAlignment="center"
        android:textColor="@color/redtext"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteY="77dp">

        <Button
            android:id="@+id/btn_pengacara_fav"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntobold"
            android:text="Pengacara" />

        <Button
            android:id="@+id/btn_psikolog_fav"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/redtext"
            android:fontFamily="@font/nuntobold"
            android:backgroundTint="@color/white"
            android:text="Psikolog" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>