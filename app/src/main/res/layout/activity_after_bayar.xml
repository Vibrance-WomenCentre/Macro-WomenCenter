<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterBayar">

    <Button
        android:layout_width="51dp"
        android:layout_height="62dp"
        android:layout_marginStart="280dp"
        android:backgroundTint="@color/primary"
        android:contentDescription="@string/back_button"
        android:drawableLeft="@drawable/fav"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/primary"
        android:contentDescription="@string/back_button"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="413dp"
        android:layout_height="279dp"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vera_img"></ImageView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntobold"
            android:text="@string/laws1"
            android:textColor="@color/black"
            android:textSize="14sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntobold"
            android:text="@string/job"
            android:textColor="#7E7B7B"
            android:textSize="12sp"
            android:layout_marginTop="5dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nuntobold"
            android:text="@string/harga1"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="12sp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/bidkeahliann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nuntobold"
        android:text="@string/ahli"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/atas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="291dp"></TextView>

    <TextView
        android:id="@+id/ahliw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitoreguler"
        android:text="@string/spesialis"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/bidkeahliann"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/btn_calll"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/call"
        android:fontFamily="@font/nuntobold"
        android:text="call"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="465dp"
        app:layout_constraintTop_toBottomOf="@id/ahliw"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_cht"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/baseline_chat_bubble_24"
        android:fontFamily="@font/nuntobold"
        android:text="chat"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/ahliw"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="465dp" />
</androidx.constraintlayout.widget.ConstraintLayout>